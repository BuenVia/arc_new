<%- include('../partials/header') %>

<div class="card">
<div class="card-header"> 
    <h1><%= service.title %></h1>
  </div>
  <div class="card-body">  
    <p><%= service.subTitle %></p>
    <p><%= service.content %></p>


    <% service.subContent.forEach(sub => { %>

        <div class="card-body">
          <h4><%= sub.title %></h4>
          <p><%= sub.subTitle %></p>
          <p><%= sub.content %></p>
        </div>

    <% }) %>


  </div>
  <div class="card-footer">
    <a href="/services" class="btn btn-link">Back...</a>
  </div>
</div> 


<%- include('../partials/footer') %>
<%- include('../partials/header') %>
<div class="card m-3 p-5">
  <h1 class="title">ARC Support Services</h1>
  <h3>Please click on a service to find out more</h3>
</div>

<div class="service-container">
  <% vda.forEach(v => { %>
    <div class="col-4 m-3">
      <div class="card">
        <div class="card-body">
          <h4><%= v.title %></h4>
          <a href="services/<%= v.slug %>"><button class="btn btn-link">Learn more</button></a>
        </div>
      </div>
    </div>
      <% }) %>
</div>

<div id="vdaEl"></div>

<script src="../../js/vda.js" defer></script>
